<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/name_sugg_txt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:maxLines="1"
        android:layout_margin="4dp"
        android:text="Movie Name"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_sugg_img" />

    <TextView

        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/movieid_sugg_txt"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_margin="4dp"
        android:text="Movie ID"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_below="@id/movie_sugg_img"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_sugg_txt"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/movie_sugg_img"
        android:src="@drawable/info_poster"
        />
</RelativeLayout>